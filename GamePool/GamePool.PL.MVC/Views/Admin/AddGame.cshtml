@model CreateGameVM

@{
    ViewBag.Title = "AddGame";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section styles {
    <link href="~/Content/css/select2.min.css" rel="stylesheet" />
}

@section scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/select2.min.js"></script>
    <script src="~/Scripts/Include/predicate-input.js"></script>
}

@using (Html.BeginForm("AddGame", "Admin", FormMethod.Post, new { @class = "form-horizontal game-form" }))
{
    <h3>Main info</h3>

    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Name:" } })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description)
        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", placeholder = "Description:" })
        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Price)
        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", placeholder = "Price:" } })
        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.GenreIds)
        @Html.DropDownListFor(model => model.GenreIds, Enumerable.Empty<SelectListItem>(), new { @class = "form-control genres-input", multiple = "multiple" })
        @Html.ValidationMessageFor(model => model.GenreIds, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ReleaseDate)
        <input type="date" id="ReleaseDate" name="ReleaseDate" class="form-control"/>
        @Html.ValidationMessageFor(model => model.ReleaseDate, "", new { @class = "text-danger" })
    </div>

    <h3>System requirements</h3>
    <h4>Minimal system requirements</h4>

    @Html.HiddenFor(model => model.MiminalRequirements.Type, new { Value = "min" })

    <div class="form-group">
        @Html.LabelFor(model => model.MiminalRequirements.Processor)
        @Html.EditorFor(model => model.MiminalRequirements.Processor, new { htmlAttributes = new { @class = "form-control", placeholder = "Processor:" } })
        @Html.ValidationMessageFor(model => model.MiminalRequirements.Processor, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MiminalRequirements.Memory)
        @Html.EditorFor(model => model.MiminalRequirements.Memory, new { htmlAttributes = new { @class = "form-control", placeholder = "Memory:" } })
        @Html.ValidationMessageFor(model => model.MiminalRequirements.Memory, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MiminalRequirements.OperationSystem)
        @Html.EditorFor(model => model.MiminalRequirements.OperationSystem, new { htmlAttributes = new { @class = "form-control", placeholder = "Opreation system:" } })
        @Html.ValidationMessageFor(model => model.MiminalRequirements.OperationSystem, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MiminalRequirements.Graphics)
        @Html.EditorFor(model => model.MiminalRequirements.Graphics, new { htmlAttributes = new { @class = "form-control", placeholder = "Graphics:" } })
        @Html.ValidationMessageFor(model => model.MiminalRequirements.Graphics, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MiminalRequirements.Storage)
        @Html.EditorFor(model => model.MiminalRequirements.Storage, new { htmlAttributes = new { @class = "form-control", placeholder = "Storage:" } })
        @Html.ValidationMessageFor(model => model.MiminalRequirements.Storage, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MiminalRequirements.DirectX)
        @Html.EditorFor(model => model.MiminalRequirements.DirectX, new { htmlAttributes = new { @class = "form-control", placeholder = "DirectX:" } })
        @Html.ValidationMessageFor(model => model.MiminalRequirements.DirectX, "", new { @class = "text-danger" })
    </div>

    <h4>Recommended system requirements</h4>

    @Html.HiddenFor(model => model.RecommendedRequirements.Type, new { Value = "rec" })

    <div class="form-group">
        @Html.LabelFor(model => model.RecommendedRequirements.Processor)
        @Html.EditorFor(model => model.RecommendedRequirements.Processor, new { htmlAttributes = new { @class = "form-control", placeholder = "Processor:" } })
        @Html.ValidationMessageFor(model => model.RecommendedRequirements.Processor, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.RecommendedRequirements.Memory)
        @Html.EditorFor(model => model.RecommendedRequirements.Memory, new { htmlAttributes = new { @class = "form-control", placeholder = "Memory:" } })
        @Html.ValidationMessageFor(model => model.RecommendedRequirements.Memory, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.RecommendedRequirements.OperationSystem)
        @Html.EditorFor(model => model.RecommendedRequirements.OperationSystem, new { htmlAttributes = new { @class = "form-control", placeholder = "Opreation system:" } })
        @Html.ValidationMessageFor(model => model.RecommendedRequirements.OperationSystem, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.RecommendedRequirements.Graphics)
        @Html.EditorFor(model => model.RecommendedRequirements.Graphics, new { htmlAttributes = new { @class = "form-control", placeholder = "Graphics:" } })
        @Html.ValidationMessageFor(model => model.RecommendedRequirements.Graphics, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.RecommendedRequirements.Storage)
        @Html.EditorFor(model => model.RecommendedRequirements.Storage, new { htmlAttributes = new { @class = "form-control", placeholder = "Storage:" } })
        @Html.ValidationMessageFor(model => model.RecommendedRequirements.Storage, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.RecommendedRequirements.DirectX)
        @Html.EditorFor(model => model.RecommendedRequirements.DirectX, new { htmlAttributes = new { @class = "form-control", placeholder = "DirectX:" } })
        @Html.ValidationMessageFor(model => model.RecommendedRequirements.DirectX, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-info">Add</button>
    </div>
}