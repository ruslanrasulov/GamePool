@model PagedItems<UserListItemVM>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Admin panel";
}

@section scripts {
    <script src="~/Scripts/Include/pagination.js"></script>
    <script src="~/Scripts/Include/user-list.js"></script>
}

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>User id</th>
            <th>Username</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Data)
        {
            <tr>
                <td class="id-col">@user.Id</td>
                <td class="name-col">@user.Name</td>
                <td class="roles-col">@string.Join(",", user.CurrentRoles)</td>
                <td class="action-col">
                    <select data-user-name="@user.Name" class="form-control add-role-select">
                        @foreach (var role in user.AvailableRoles)
                        {
                            <option value="@role">@role</option>
                        }
                    </select>
                    <button type="button" class="btn btn-success add-user-role">Add role</button>

                    <select data-user-name="@user.Name" class="form-control remove-role-select">
                        @foreach (var role in user.CurrentRoles)
                        {
                            <option value="@role">@role</option>
                        }
                    </select>
                    <button type="button" class="btn btn-danger remove-user-role">Remove role</button>
                </td>
            </tr>
        }
    </tbody>
</table>


@{
    int difference = Model.MaxPageSelectors - Model.TotalPages;
    int count = (difference < 0) ? Model.MaxPageSelectors : Model.TotalPages;

    int startIndex;

    if (Model.TotalPages > Model.MaxPageSelectors)
    {
        int rightDifference = Model.TotalPages - Model.CurrentPage;
        int middle = Model.MaxPageSelectors / 2;
        if (Model.CurrentPage < middle)
        {
            startIndex = 1;
        }
        else if (rightDifference < middle)
        {
            startIndex = Model.TotalPages - Model.MaxPageSelectors + 1;
        }
        else
        {
            startIndex = Model.CurrentPage - middle;
        }
    }
    else
    {
        startIndex = 1;
    }
}
<div class="row text-center">
    @if (Model.TotalPages > 0)
    {
        <ul class="pagination">
            <li><a class="page-link" data-page="1"><<</a></li>
            @for (int i = 0; i < count; i++, startIndex++)
                {
                    if (startIndex == Model.CurrentPage)
                    {
                    <li class="active"><a class="page-link" data-page="@startIndex">@startIndex</a></li>
                }
                else
                {
                    <li><a class="page-link" data-page="@startIndex">@startIndex</a></li>
                }
            }
            <li><a class="page-link" data-page="@Model.TotalPages">>></a></li>
        </ul>
    }
</div>  