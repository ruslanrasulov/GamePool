@model PagedItems<OrderListItemVm>

@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section scripts {
    <script src="~/Scripts/Include/pagination.js"></script>
}

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Order id</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Email</th>
            <th>Phone number</th>
            <th>Game id</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Data)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Name</td>
                <td>@order.Surname</td>
                <td>@order.Email</td>
                <td>@order.PhoneNumber</td>
                <td>@order.GameId</td>
                <td>@order.Quantity</td>
            </tr>
        }
    </tbody>
</table>

@Html.Partial("~/Views/Shared/_PaginationPartial.cshtml", Model.PageInfo)