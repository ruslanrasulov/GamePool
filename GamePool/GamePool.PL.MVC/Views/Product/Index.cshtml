@model PagedItems<GamePreviewVm>

@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home";
}

@section scripts {
    <script>
        var CFG = CFG || {};

        CFG.action = "@Url.Action("Index", "Product")";
        
    </script>
    <script src="~/Scripts/Include/common.js"></script>
    <script src="~/Scripts/Include/pagination.js"></script>
}

<div class="container-fluid padding-clear">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner">
            <div class="item active">
                <img src="http://www.portalmmo.pl/assets/gallery/2422.jpg" class="img-responsive panorama-image" alt="Panorama image">
            </div>

            <div class="item">
                <img src="https://wallpaperscraft.com/image/battlefield_4_game_ea_digital_illusions_ce_93159_1920x1080.jpg" class="img-responsive panorama-image" alt="Panorama image">
            </div>

            <div class="item">
                <img src="http://eskipaper.com/images/game-wallpapers-25.jpg" class="img-responsive panorama-image" alt="Panorama image">
            </div>
        </div>

        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="container pb-100">
    @Html.Partial("~/Views/Shared/_GameListPartial.cshtml", Model)
</div>