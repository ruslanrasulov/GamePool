@model PagedItems<GamePreviewVM>

@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home";
}

@section scripts {
    <script>
        var CFG = CFG || {};

        CFG.action = "@Url.Action("Index", "Product")";
        
    </script>
    <script src="~/Scripts/Include/common.js"></script>
    <script src="~/Scripts/Include/pagination.js"></script>
}

<div class="container-fluid">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner">
            <div class="item active">
                <img src="http://placehold.it/1600x600?text=Image1" class="img-responsive" alt="Los Angeles">
            </div>

            <div class="item">
                <img src="http://placehold.it/1600x600?text=Image2" class="img-responsive" alt="Los Angeles">
            </div>

            <div class="item">
                <img src="http://placehold.it/1600x600?text=Image3" class="img-responsive" alt="Los Angeles">
            </div>
        </div>

        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="container pb-100">
    @{ 
        int rowCount = 0;
    }

    @foreach (var game in Model.Data)
    {
        if (rowCount == 0)
        {
            @Html.Raw("<div class=\"row\">");
        }

        <div class="col-lg-3">
            <a href="@Url.Action("Details", "Product", new { id = game.Id })">
                <h3>@game.Name</h3>
                
                @if (game.AvatarId != null)
                {
                    <img src="@Url.Action("GetImageById", "Image", new { id = game.AvatarId.Value })" class="thumbnail game-small-img-preview" alt="Alternate Text" />
                }
                else
                {
                    <img src="http://placehold.it/250x250" class="thumbnail game-small-img-preview" alt="Alternate Text" />
                }

                <p>@game.Description</p>
            </a>
            <button type="button" class="btn btn-default center-block buy-btn" data-game-id="@game.Id">Buy</button>
        </div>

        rowCount++;

        if (rowCount == 4)
        {
            @Html.Raw("</div>")
        }
    }

    @if (rowCount != 4 && rowCount != 0)
    {
        @Html.Raw("</div>")
    }

    @{
        int difference = Model.MaxPageSelectors - Model.TotalPages;
        int count = (difference < 0) ? Model.MaxPageSelectors : Model.TotalPages;

        int startIndex;

        if (Model.TotalPages > Model.MaxPageSelectors)
        {
            int rightDifference = Model.TotalPages - Model.CurrentPage;
            int middle = Model.MaxPageSelectors / 2;
            if (Model.CurrentPage < middle)
            {
                startIndex = 1;
            }
            else if (rightDifference < middle)
            {
                startIndex = Model.TotalPages - Model.MaxPageSelectors + 1;
            }
            else
            {
                startIndex = Model.CurrentPage - middle;
            }
        }
        else
        {
            startIndex = 1;
        }
    }
    <div class="row text-center">
        @if (Model.TotalPages > 0)
        {
            <ul class="pagination">
                <li><a class="page-link" data-page="1"><<</a></li>
                @for (int i = 0; i < count; i++, startIndex++)
                {
                    if (startIndex == Model.CurrentPage)
                    {
                        <li class="active"><a class="page-link" data-page="@startIndex">@startIndex</a></li>
                    }
                    else
                    {
                        <li><a class="page-link" data-page="@startIndex">@startIndex</a></li>
                    }
                }
                <li><a class="page-link" data-page="@Model.TotalPages">>></a></li>
            </ul>
        }
    </div>
</div>